{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Notes.Backend",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildbackend",
            "program": "${workspaceFolder}/Backend/Notes.Backend/bin/Debug/net8.0/Notes.Backend.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Backend/Notes.Backend",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:6080",
            }
        }
    ]
}
